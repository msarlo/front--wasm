@using Microsoft.AspNetCore.Components

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Description { get; set; }

    [Parameter]
    public string GradientClasses { get; set; } = "from-blue-600 to-indigo-800";

    [Parameter]
    public string IconColor { get; set; } = "text-blue-500";

    [Parameter]
    public string HoverBorderColor { get; set; } = "border-blue-500";

    [Parameter]
    public RenderFragment? ServiceFeatures { get; set; }

    [Parameter]
    public RenderFragment? ServiceDetails { get; set; }

    [Parameter]
    public RenderFragment? PackageSelector { get; set; }

    [Parameter]
    public RenderFragment? ActionButtons { get; set; }
}

<div class="bg-gradient-to-r @GradientClasses py-12 md:py-16">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">@Title</h1>
    <p class="text-lg md:text-xl text-white mb-6 md:mb-8 max-w-3xl mx-auto">
      @Description
    </p>
  </div>
</div>

<div class="container mx-auto px-4 py-8 md:py-12">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-start">
    <div>
      @ServiceFeatures
      @if (ServiceDetails != null)
      {
        <div class="mt-6 md:mt-8">
          @ServiceDetails
        </div>
      }
    </div>
    <div class="bg-[#2d2d25] rounded-lg shadow-lg p-4 md:p-8 border border-gray-700 mt-6 md:mt-0">
      @PackageSelector
      @if (ActionButtons != null)
      {
        <div class="mt-6 md:mt-8">
          @ActionButtons
        </div>
      }
    </div>
  </div>
</div>


