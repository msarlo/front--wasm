@code {
    [Parameter] 
    public string ImageUrl { get; set; } = "";

    [Parameter] 
    public string ImageAlt { get; set; } = "";

    [Parameter] 
    public string Title { get; set; } = "";

    [Parameter] 
    public string Description { get; set; } = "";

    [Parameter]
    public string DetailsUrl { get; set; } = "";

    [Parameter] 
    public string GlowColor { get; set; } = "#f1c533";
}

<div class="relative bg-gray-800 rounded-lg overflow-hidden shadow-lg transition duration-300 hover:scale-105 flex flex-col h-full min-h-[700px]"
     style="--glow-color: @GlowColor"
     onmouseover="this.style.boxShadow = '0 0 20px var(--glow-color)'; this.style.borderColor = 'var(--glow-color)'; this.style.borderWidth = '2px'; this.style.borderStyle = 'solid';"
     onmouseout="this.style.boxShadow = ''; this.style.border = '';">
  <div class="overflow-hidden h-80 sm:h-96 md:h-[26rem] lg:h-[28rem]">
    <img 
      src="@ImageUrl" 
      alt="@ImageAlt" 
      class="w-full h-full object-cover" />
  </div>
  <div class="p-5 md:p-7 flex flex-col flex-grow">
    <h3 class="text-lg md:text-xl font-bold mb-3 text-white">@Title</h3>
    <p class="text-gray-300 text-sm md:text-base flex-grow">@Description</p>
    <div class="flex justify-end items-center mt-5">
      <a
        href="@DetailsUrl"
        class="hover:text-[var(--glow-color)] transition text-white font-bold py-2">
        Saiba Mais
      </a>
    </div>
  </div>
</div>
